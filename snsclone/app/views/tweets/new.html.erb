<h1>New Tweet</h1>
<% if current_user.user_status == "normal" %>
	<div>
		<%= form_with(model: Tweet.new, multipart: true, local: true) do |f| %>
		<div>
			<% if @tweet.errors.messages[:body].any? %>
				<%= @tweet.errors.messages[:body][0] %>
			<% end %>
			<%= f.text_area :body, 
			placeholder: "How are you doing now?",
			class: "form" 
	        %>
		</div>
	 	<div>
	 		<%= f.radio_button :status, :open %>Public
	 	</div>
	 	<div>
	 		<%= f.radio_button :status, :only_followers %>Followers
	 	</div>
	 	<div>
	 		<%= f.radio_button :status, :only_me %>Private
	 	</div>
		<div>
	      <%= f.label :images, class: "images" %><br>
	      <%= f.file_field :images, multiple: true %>
	    </div>
	    <div>
	      <%= f.label :images, class: "images" %><br>
	      <%= f.file_field :images, multiple: true %>
	    </div>
	    <div>
	      <%= f.label :images, class: "images" %><br>
	      <%= f.file_field :images, multiple: true %>
	    </div>

		<p><%= f.submit %></p>
		<% end %>
	</div>
<% else %>
	<h2>Your account is suspended!</h2>
<% end %>