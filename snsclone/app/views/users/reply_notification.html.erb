<h1>Reply_notification</h1>
<% if current_user.user_status == "normal" %>
	<% @replies.each do |reply| %>
		<div class = "notification">
			<% unless reply.user == @user %>
				<p><%= reply.created_at %></p>
				<p>
					<%= link_to "#{reply.user.username}", user_path(reply.user.id)  %>
					replied your tweet
				</p>
				<p><%= link_to"#{reply.original.body}", tweet_path(reply.original.id) %></p>	
			<% end %>
		</div>
	<% end %>
<% else %>
	<h2>Your account is suspended!</h2>
<% end %>

